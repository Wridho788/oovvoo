<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.topup.Instant_top_up"
    android:background="#33DBDADB">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/colorWhite">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Up ke"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textSize="17sp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/customborder">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ovo"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OVO Cash"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="2"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Nominal Top Up"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textSize="17sp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <Button
                            android:id="@+id/btn_10k"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground"
                            android:text="Rp. 10.000"
                            android:textAllCaps="false"
                            android:layout_marginEnd="8dp"
                            />
                        <Button
                            android:id="@+id/btn_100k"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground"
                            android:text="Rp. 100.000"
                            android:textAllCaps="false"
                            android:layout_marginEnd="8dp"
                            />
                        <Button
                            android:id="@+id/btn_1000k"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground"
                            android:text="Rp. 1.000.000"
                            android:textAllCaps="false"
                            android:layout_marginEnd="8dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/input_nominal"/>

                        <EditText
                            android:id="@+id/et_nominal_topup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Minimal Rp. 10.000"
                            android:fontFamily="@font/poppins"
                            android:textSize="15sp"
                            android:inputType="number" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <Button
            android:id="@+id/btn_topup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Top Up Sekarang"
            android:textSize="20sp"
            android:background="?android:selectableItemBackground"
            android:backgroundTint="@color/colorPrimary" />
    </LinearLayout>
</FrameLayout>